<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EmergencyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_white">

        <include layout="@layout/toolbar_with_exit" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/primary_blue_lighter"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/primary_purple"
                    app:strokeWidth="1dp">

                    <Button
                        android:id="@+id/btn_violenza_domestica"
                        style="@style/EmergencyButtonStyle"
                        android:text="@string/emergency_violence_title"
                        android:drawableTop="@drawable/ic_emergency_alert"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/primary_blue_lighter"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/primary_purple"
                    app:strokeWidth="1dp">

                    <Button
                        android:id="@+id/btn_supporto_psicologico"
                        style="@style/EmergencyButtonStyle"
                        android:text="@string/emergency_psychological_title"
                        android:drawableTop="@drawable/ic_psychological_support"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/primary_blue_lighter"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/primary_purple"
                    app:strokeWidth="1dp">

                    <Button
                        android:id="@+id/btn_emergenza_medica"
                        style="@style/EmergencyButtonStyle"
                        android:text="@string/emergency_medical_title"
                        android:drawableTop="@drawable/ic_medical_emergency"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/primary_blue_lighter"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/primary_purple"
                    app:strokeWidth="1dp">

                    <Button
                        android:id="@+id/btn_centri_antiviolenza"
                        style="@style/EmergencyButtonStyle"
                        android:text="@string/emergency_centers_title"
                        android:drawableTop="@drawable/ic_shelter"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/primary_purple"
                    app:cardCornerRadius="12dp">

                    <Button
                        android:id="@+id/btn_chiamata_generica"
                        style="@style/EmergencyButtonStyle"
                        android:text="@string/emergency_general_title"
                        android:textColor="@color/white"
                        android:drawableTop="@drawable/ic_emergency_alert"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/light_white"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/main_menu" />
</androidx.drawerlayout.widget.DrawerLayout>